@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 ">
            <div class="row p-3">
                <div class="col-12 p-1">
                    <div class="card p-3 border-0 shadow border-primary  border-5 rounded">
                        <img src="@product.ImageURL" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by @product.Author <b></b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark opacity-75 text-center mb-0">List Price: 
                                    <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("c")
                                    </span> 
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark opacity-75 text-center">As low as: 
                                    <span>
                                        @product.Price100.ToString("c")
                                    </span> 
                                 </p>                   
                            </div>
                        </div>
                        <div>
                            <a href="#" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>